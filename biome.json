{
    "$schema": "https://biomejs.dev/schemas/1.7.2/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "rules": {
            "all": true
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "bracketSpacing": false,
            "arrowParentheses": "asNeeded"
        }
    }
}
